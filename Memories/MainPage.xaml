<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Memories.MainPage">

  <ScrollView>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="150"/>
        <RowDefinition Height="150"/>
        <RowDefinition Height="150"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="150"/>
        <ColumnDefinition Width="150"/>
        <ColumnDefinition Width="150"/>
      </Grid.ColumnDefinitions>
      <ImageButton Source="don.png" Grid.Row="1" Grid.Column="2" 
                   BackgroundColor="Green"  Clicked="ImageButton_Clicked"/>
      <ImageButton Source="lionel.png" Grid.Row="0" Grid.Column="1" 
                   BackgroundColor="Red"  Clicked="ImageButton_Clicked"/>
      <ImageButton Source="milan.png" Grid.Row="2" Grid.Column="1" 
                   BackgroundColor="Yellow" Clicked="ImageButton_Clicked"
                   x:Name="Milan" />
    </Grid>
  </ScrollView>

</ContentPage>
